<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_mobile_2"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shapes"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="40dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_sign_up_userName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:drawableLeft="@drawable/icons8_user_24px"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColorLink="#00161515"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/ed_sign_up_Email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/ed_sign_up_userName"
                android:background="@null"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="20dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/ed_sign_up_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_sign_up_userName" />

            <EditText
                android:id="@+id/ed_sign_up_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_sign_up_Email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawablePadding="20dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/ed_sign_up_Password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_sign_up_Email" />


            <EditText
                android:id="@+id/ed_sign_up_Password"
                android:layout_width="300dp"
                android:layout_below="@id/ed_sign_up_phone"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/icons8_lock_24px_5"
                android:drawablePadding="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/ed_sign_up_ConfrimPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_sign_up_phone" />

            <EditText
                android:id="@+id/ed_sign_up_ConfrimPassword"
                android:layout_width="300dp"
                android:layout_below="@id/ed_sign_up_Password"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:background="@null"
                android:drawableLeft="@drawable/icons8_lock_24px_5"
                android:drawablePadding="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_sign_up_Password" />


        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/ed_sign_up_button"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Sign up"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />



</RelativeLayout>